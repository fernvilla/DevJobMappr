        heatMapData.push(new google.maps.LatLng(jobs_array[i].latitude, jobs_array[i].longitude));
      }
      var pointArray = new google.maps.MVCArray(heatMapData);
      heatmap = new google.maps.visualization.HeatmapLayer({
      data: pointArray,
      map: map
    });
      
  } 

